<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @post.description %>
</p>


<div class="twentytwenty-container">
  <% @post.image_attachments.each do |image| %>
    <%= attachment_image_tag(image, :file, :fill, 300, 300, format: "jpg") %>
  <% end %>
</div>
